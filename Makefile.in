#
#   Makefile.fpc for CCDciel
#

[package]
name=alpaca_encoder
version=0

[target]
dirs=component src

[require]
libc=y
packages=rtl

[prerules]
PREFIX=%PREFIX%

[rules]
.PHONY: all

all: component_all src_all

ifeq ($(OS_TARGET),darwin)
install: 
	./install_darwin.sh $(PREFIX)
else
install: 
	./install.sh $(PREFIX) $(CPU_TARGET)
install_win: 
	./install_win.sh win32 $(PREFIX)
install_win64: 
	./install_win.sh win64 $(PREFIX)
install_win_dual32: 
	./install_win_dual.sh win32 $(PREFIX)
install_win_dual64: 
	./install_win_dual.sh win64 $(PREFIX)
endif
revision:
	./git-version.sh
